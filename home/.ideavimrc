" Map leader to space
let mapleader=" "

" Plugins
set commentary

" Suggested settings
set scrolloff=5
set incsearch
set showmode
set nu
map Q gq

" Key mappings
map <leader>d <Action>(Debug)
map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>c <Action>(Stop)
map <leader>r <Action>(ReformatCode)
map <leader>r <Action>(RenameElement)
map <leader>z <Action>(ToggleDistractionFreeMode)
